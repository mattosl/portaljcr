<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
    version="2.2">
    
    <application>
		<!-- Define arquivo que contem as mensagens da aplicacao  -->
		<resource-bundle>
			<base-name>ApplicationMessages</base-name>
			<var>appMessages</var>
		</resource-bundle>
		
		<!-- Define arquivo customizado para as mensagens das validacoes JSF e BeanValidation. -->
		<message-bundle>ValidationMessages</message-bundle>
				
	</application>	

	<!-- Define uma fabrica customizada para tratar excecoes do JSF -->
	<factory>
		<exception-handler-factory>br.com.grupojcr.util.exception.ExceptionHandlerFacesFactory</exception-handler-factory>
	</factory>

</faces-config>
